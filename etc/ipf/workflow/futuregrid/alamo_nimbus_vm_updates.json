{
  "name": "nimbus_glue2_vm_updates",
  "steps": [
    { "name": "ipf.name.ResourceNameStep",
      "params": {
        "resource_name": "nimbus.alamo.futuregrid.org"
      }
    },
    { "name": "glue2.futuregrid.nimbus.ComputingActivityUpdateStep",
      "params": {
        "nimbus_dir": "/opt/nimbus-2.9",
        "position_file": "alamo_nimbus_vm_updates.pos"
      }
    },
    {
      "name": "ipf.publish.AmqpStep",
      "params": {
        "publish": ["glue2.computing_activity.ComputingActivityOgfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.activity_updates"
      }
    }
  ]
}
