{
  "name": "alamo_pbs_glue2_job_updates",
  "steps": [
    { "name": "ipf.name.ResourceNameStep",
      "params": {
        "resource_name": "torquemoab.alamo.futuregrid.org"
      }
    },
    { "name": "glue2.futuregrid.pbs.ComputingActivityUpdateStep"
      "params": {
        "position_file": "alamo_pbs_job_updates.pos"
      }
    },
    {
      "name": "ipf.publish.AmqpStep",
      "params": {
        "publish": ["glue2.computing_activity.ComputingActivityOgfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.activity_updates"
      }
    }
  ]
}
