{
  "name": "glue2_nimbus",
  "params": {
    "nimbus_dir": "/opt/nimbus-2.9"
  },
  "steps": [
    { "name": "ipf.name.ResourceNameStep",
      "params": {
        "resource_name": "nimbus.alamo.futuregrid.org"
      }
    },
    { "name": "ipf.name.SiteNameStep",
      "params": {
        "site_name": "tacc.futuregrid.org"
      }
    },
    { "name": "glue2.nimbus.ComputingEndpointStep",
      "params": {
        "host_name": "daemon.alamo.futuregrid.org"
      }
    },
    { "name": "glue2.futuregrid.nimbus.ComputingActivitiesStep" },
    { "name": "glue2.nimbus.ComputingSharesStep" },
    { "name": "glue2.nimbus.ComputingServiceStep" },
    { "name": "glue2.nimbus.ExecutionEnvironmentsStep" },
    { "name": "glue2.nimbus.ComputingManagerStep" },
    {
      "name": "ipf.publish.AmqpStep",
      "params": {
        "publish": ["glue2.compute.PublicIpfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.systems"
      }
    },
    {
      "name": "ipf.publish.AmqpStep",
      "params": {
        "publish": ["glue2.compute.PrivateIpfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.activities"
      }
    },
    {
      "name": "ipf.publish.FileStep",
      "params": {
        "publish": ["glue2.compute.PublicIpfJson"],
        "path": "glue2_nimbus_public.json"
      }
    },
    {
      "name": "ipf.publish.FileStep",
      "params": {
        "publish": ["glue2.compute.PrivateIpfJson"],
        "path": "glue2_nimbus_private.json"
      }
    }
  ]
}
