{
  "name": "glue2_nimbus",
  "params": {
    "nimbus_dir": "/opt/nimbus-2.9"
  },
  "steps": [
    { "name": "ipf.resource_name.ResourceNameStep",
      "params": {
        "resource_name": "nimbus.alamo.futuregrid.org"
      }
    },
    { "name": "ipf.site_name.SiteNameStep",
      "params": {
        "site_name": "tacc.futuregrid.org"
      }
    },
    { "name": "glue2.nimbus.nimbus_computing_endpoint.NimbusEndpointStep",
      "params": {
        "host_name": "daemon.alamo.futuregrid.org"
      }
    },
    { "name": "glue2.nimbus.nimbus_computing_activity.NimbusComputingActivitiesStep" },
    { "name": "glue2.nimbus.nimbus_computing_share.NimbusComputingSharesStep" },
    { "name": "glue2.nimbus.nimbus_computing_service.NimbusComputingServiceStep" },
    { "name": "glue2.nimbus.nimbus_execution_environment.NimbusExecutionEnvironmentsStep" },
    { "name": "glue2.nimbus.nimbus_computing_manager.NimbusComputingManagerStep" },
    {
      "name": "ipf.amqp.AmqpPublishStep",
      "params": {
        "publish": ["glue2.public_compute.PublicComputeIpfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.systems"
      }
    },
    {
      "name": "ipf.amqp.AmqpPublishStep",
      "params": {
        "publish": ["glue2.private_compute.PrivateComputeIpfJson"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.activities"
      }
    },
    {
      "name": "ipf.file.FilePublishStep",
      "params": {
        "publish": ["glue2.public_compute.PublicComputeIpfJson"],
        "path": "glue2_nimbus_public.json"
      }
    },
    {
      "name": "ipf.file.FilePublishStep",
      "params": {
        "publish": ["glue2.private_compute.PrivateComputeIpfJson"],
        "path": "glue2_nimbus_private.json"
      }
    }
  ]
}
