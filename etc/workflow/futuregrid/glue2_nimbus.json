{
  "name": "glue2_nimbus",
  "period": 120,
  "params": {
    "nimbus_dir": "/opt/nimbus-2.9"
  },
  "steps": [
    { "name": "ipf/resource_name",
      "params": {
        "resource_name": "nimbus.alamo.futuregrid.org"
      }
    },
    { "name": "ipf/site_name",
      "params": {
        "site_name": "tacc.futuregrid.org"
      }
    },
    { "name": "glue2/nimbus/computing_endpoint",
      "params": {
        "endpoint": {
          "host_name": "daemon.alamo.futuregrid.org"
        }
      }
    },
    { "name": "glue2/nimbus/computing_activities" },
    { "name": "glue2/nimbus/computing_shares" },
    { "name": "glue2/nimbus/computing_service" },
    { "name": "glue2/nimbus/execution_environments" },
    { "name": "glue2/nimbus/computing_manager" },
    {
      "name": "ipf/publish/file",
      "params": {
        "requires_types": ["glue2/teragrid/public_compute.json"],
        "path": "glue2_public.json"
      }
    },
    {
      "name": "ipf/publish/file",
      "params": {
        "requires_types": ["glue2/teragrid/private_compute.json"],
        "path": "glue2_private.json"
      }
    },
    {
      "name": "ipf/publish/amqp",
      "params": {
        "requires_types": ["glue2/teragrid/public_compute.json"],
        "service": ["info1.dyn.teragrid.org","info2.dyn.teragrid.org"],
	"vhost": "teragrid_public",
        "exchange": "glue2"
      }
    },
    {
      "name": "ipf/publish/amqp",
      "params": {
        "requires_types": ["glue2/teragrid/private_compute.json"],
        "service": ["info1.dyn.teragrid.org","info2.dyn.teragrid.org"],
	"vhost": "teragrid_private",
        "exchange": "glue2"
      }
    }
  ]
}
