{
  "name": "nimbus_glue2_job_updates",
  "period": 0,
  "steps": [
    { "name": "ipf/resource_name",
      "params": {
        "resource_name": "nimbus.sierra.futuregrid.org"
      }
    },
    { "name": "glue2/nimbus/computing_activity_update" },
    {
      "name": "ipf/publish/amqp",
      "params": {
        "requires_types": ["glue2/ipf/computing_activity.json"],
        "services": [ "inca.futuregrid.org" ],
        "ssl_options": {
          "keyfile":"key.pem",
          "certfile":"cert.pem",
          "ca_certs":"ca_certs.pem"
        },
	"vhost": "monitoring",
        "exchange": "glue2.activity_updates"
      }
    }
  ]
}
