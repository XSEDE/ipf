{
  "name": "sge_activity",
  "description": "This workflow watches the SGE reporting file and publishes updates about individual jobs",
  "steps": [
    { "name": "ipf.teragrid.sysinfo.ResourceNameStep" },
    { "name": "ipf.teragrid.sysinfo.SiteNameStep" },
    { "name": "ipf.glue2.sge.ComputingActivityUpdateStep"
      "params": {
        "position_file": "sge_activity.pos"
      }
    },
    {
      "name": "ipf.publish.AmqpStep",
      "params": {
        "publish": ["ipf.glue2.computing_activity.ComputingActivityOgfJson"],
        "services": [ "info1.dyn.xsede.org", "info2.dyn.xsede.org" ],
        "ssl_options": {
          "keyfile": "key.pem",
          "certfile": "cert.pem",
          "ca_certs": "ca_certs.pem"
        },
	"vhost": "xsede_private",
        "exchange": "glue2.computing_activity"
      }
    }
  ]
}
